@* @model List<B.E.course>
چون ویو بگ زدیم دیگه مدل نمیخواد *@
<div class="row">
    <form asp-action="Search" asp-controller="course" method="get">

    <div class="input-field col s6">
    <i class="material-icons prefix">search</i>
            @* public IActionResult Search(string s) *@
            @* تو کنترلر این s رو ورودی دادیم برای این که بره تو این پایین اسم رو همین s میدیم *@
    <input name="s" id="icon_prefix3" type="text" class="validate">
    <label for="icon_prefix3">جستجو</label>
    </div>
    <button class="waves-effect waves-light btn mb-1">
        <i class="material-icons right">search</i>جستجو
        </button>
    </form>
</div>
<div id="view-borderless-table">
    <div class="row">
        <div class="col s12">
            <table>
                <thead>
                    <tr>
                        <th data-field="id">عنوان</th>
                        <th data-field="name">زمان</th>
                        <th data-field="price">قیمت</th>
                        <th data-field="price">ویرایش</th>
                        <th data-field="price">حذف محصول</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(B.E.course item in ViewBag.courses)
                    {

                    <tr>
                        <td>@item.title</td>
                        <td>@item.totaltime</td>
                        <td>@item.price</td>
                            <td>
                                @* چرا ای اس پی روت ایدی گذاشت؟ چون که ورودی ادیت تو کنترلز همون ایدیه *@
                                <a asp-action="Edit" asp-controller="course" asp-route-id="@item.id" class="waves-effect waves-light btn mb-1">
                                    @* <i class="material-icons right">edit</i> *@ویرایش
                                </a>
                            </td>
                            <td>
                                <form asp-action="Delete" asp-controller="course" method="post" onsubmit="return confirm('آیا از حذف این دوره اطمینان دارید؟')">
                                    <input type="hidden" name="id" value="@item.id" />
                                    <button type="submit" class="waves-effect waves-light btn mb-1 red">
                                        <i class="material-icons right">delete</i> حذف
                                    </button>
                                </form>
                            </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div> 
</div>
